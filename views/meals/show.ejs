<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<% if (user) { %>
  <%= title %> <br>
  <label>
    Ingredients:
  </label><br>
  <div>
    <ul>
      <% meal.ingredient.forEach(i => { %>
        <p>
          <%= i.name %> 
          <form action="/meals/<%= meal._id%>/<%= i._id %>?_method=DELETE" method="post">
          <button class="btn btn-danger">X</button>
        </form>
        </p>
      <% }) %>
    </ul>
  </div>
  <form action="/meals/<%= meal._id%>/ingredients" method="POST">
    <select name="ingredientId">
      <% ingredients.forEach(ingredient => { %>
      <option value="<%= ingredient._id %>"><%= ingredient.name %> </option>
      <% }) %>
    </select>
    <button type="submit" class="btn btn-info">Add Ingredient</button>
  </form>
  <form 
    action="/meals/<%= meal._id %>/guide"
    method="POST"
  >
    <label for="step">Guide:</label><br>
    <input name="step">
    <button type="submit" class="btn btn-info">Add Step</button>
  </form>
  <% if (meal.guide) { %>
    <table>
      <thead>
        <tr>
          <th>Steps</th>
        </tr>
      </thead>
      <tbody>
        <% meal.guide.forEach(function(guide) { %>
          <tr>
            <td><%= guide.step %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Guide Yet!</h3>
  <% } %>
<% } %>


<%- include('../partials/footer') %>